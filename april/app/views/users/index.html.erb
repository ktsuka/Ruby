<h2>Login</h2>
<table>
    <tr>
        <td style="text-align: right">User：</td>
        <td><%= text_field_tag "user", "", style: "width: 120px" %></td>
    </tr>
    <tr>
        <td style="text-align: right">Password：</td>
        <td><%= password_field_tag "password", "", style: "width: 120px" %></td>
    </tr>
    <tr>
        <td colspan="2" style="text-align: center">
        <%= submit_tag "login" %></td>
    </tr>
</table>
<table>
    <tr><p><%= link_to "Create New Account", :new_user %></p></tr>
</table>
